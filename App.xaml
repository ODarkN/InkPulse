<Application x:Class="InkPulse.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InkPulse"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Global brushes matching current colors in MainWindow -->
        <SolidColorBrush x:Key="DialogueBoxBackground" Color="#AA000000"/>
        <SolidColorBrush x:Key="DialogueTextColor" Color="White"/>
    </Application.Resources>
</Application>